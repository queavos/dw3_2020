
<h3>Formulario</h3>
<%= form_tag( datos_show_path) do  %>
<p>
<%= label_tag :nombre, "Nombre" %> 
<%= text_field_tag :nombre %> 
</p>
<p>
<%= label_tag :email, "Correo" %> 
<%= email_field_tag :email %> 
</p>
<p>
<%= label_tag :telefono, "Telef" %> 
<%= text_field_tag :telefono %> 
</p>
<p>
<%= label_tag :asunto, "Asunto" %> 
<%= text_field_tag :asunto %> 
</p>
<p>
<%= label_tag :mensaje, "Mensaje" %> 
<%= text_area_tag :mensaje %> 
</p>
<br>

<div><%= submit_tag "enviar" %></div>
<% end %>